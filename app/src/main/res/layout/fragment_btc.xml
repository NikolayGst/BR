<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
      android:id="@+id/content_error"
      layout="@layout/error"/>

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
      android:id="@+id/lrBTC"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:visibility="gone"
      android:focusableInTouchMode="true"
      android:orientation="vertical">

      <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">
        <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingTop="@dimen/small_margin"
          android:paddingBottom="@dimen/small_margin"
          android:paddingLeft="@dimen/big_margin"
          android:paddingRight="@dimen/big_margin">
          <EditText
            android:id="@+id/editBTC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/txtBTC"
            android:background="@null"
            android:maxLength="7"
            android:text="1"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            app:setFontRobotoLight="@{true}"/>
          <TextView
            android:id="@+id/txtBTC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="right"
            android:text="BTC"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            app:setFontRobotoLight="@{true}"/>
        </RelativeLayout>
      </android.support.v7.widget.CardView>

      <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="?attr/selectableItemBackground"
          android:clickable="true"
          android:orientation="vertical">

          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:text="Гривня"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            app:setFontRobotoLight="@{true}"/>

          <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/bg"/>

          <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="horizontal">

            <ImageView
              android:layout_width="50dp"
              android:layout_height="50dp"
              android:layout_marginLeft="8dp"
              android:layout_alignParentLeft="true"
              android:src="@drawable/ua"/>

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:layout_centerVertical="true"
              android:gravity="center"
              android:text="UAH"
              android:textColor="@android:color/black"
              android:textSize="18sp"
              app:setFontRobotoLight="@{true}"/>

            <TextView
              android:id="@+id/txtUAH"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginRight="8dp"
              android:layout_alignParentRight="true"
              android:layout_centerVertical="true"
              android:gravity="center"
              android:text="-"
              android:textColor="@android:color/black"
              android:textSize="18sp"
              app:setFontRobotoLight="@{true}"/>
          </RelativeLayout>
        </LinearLayout>
      </android.support.v7.widget.CardView>

      <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="?attr/selectableItemBackground"
          android:clickable="true"
          android:orientation="vertical">

          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:text="Російський рубль"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            app:setFontRobotoLight="@{true}"/>

          <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/bg"/>

          <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="horizontal">

            <ImageView
              android:layout_width="50dp"
              android:layout_height="50dp"
              android:layout_marginLeft="8dp"
              android:layout_alignParentLeft="true"
              android:src="@drawable/ru"/>

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:layout_centerVertical="true"
              android:gravity="center"
              android:text="RUB"
              android:textColor="@android:color/black"
              android:textSize="18sp"
              app:setFontRobotoLight="@{true}"/>

            <TextView
              android:id="@+id/txtRUB"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginRight="8dp"
              android:layout_alignParentRight="true"
              android:layout_centerVertical="true"
              android:gravity="center"
              android:text="-"
              android:textColor="@android:color/black"
              android:textSize="18sp"
              app:setFontRobotoLight="@{true}"/>
          </RelativeLayout>
        </LinearLayout>
      </android.support.v7.widget.CardView>

      <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="?attr/selectableItemBackground"
          android:clickable="true"
          android:orientation="vertical">

          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:text="Долар"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            app:setFontRobotoLight="@{true}"/>

          <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/bg"/>

          <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="horizontal">

            <ImageView
              android:layout_width="50dp"
              android:layout_height="50dp"
              android:layout_marginLeft="8dp"
              android:layout_alignParentLeft="true"
              android:src="@drawable/usa"/>

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:layout_centerVertical="true"
              android:gravity="center"
              android:text="USD"
              android:textColor="@android:color/black"
              android:textSize="18sp"
              app:setFontRobotoLight="@{true}"/>

            <TextView
              android:id="@+id/txtUSD"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginRight="8dp"
              android:layout_alignParentRight="true"
              android:layout_centerVertical="true"
              android:gravity="center"
              android:text="-"
              android:textColor="@android:color/black"
              android:textSize="18sp"
              app:setFontRobotoLight="@{true}"/>
          </RelativeLayout>
        </LinearLayout>
      </android.support.v7.widget.CardView>

      <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="?attr/selectableItemBackground"
          android:clickable="true"
          android:orientation="vertical">

          <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:text="Євро"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            app:setFontRobotoLight="@{true}"/>

          <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/bg"/>

          <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="horizontal">

            <ImageView
              android:layout_width="50dp"
              android:layout_height="50dp"
              android:layout_marginLeft="8dp"
              android:layout_alignParentLeft="true"
              android:src="@drawable/eur"/>

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:layout_centerVertical="true"
              android:gravity="center"
              android:text="EUR"
              android:textColor="@android:color/black"
              android:textSize="18sp"
              app:setFontRobotoLight="@{true}"/>

            <TextView
              android:id="@+id/txtEUR"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginRight="8dp"
              android:layout_alignParentRight="true"
              android:layout_centerVertical="true"
              android:gravity="center"
              android:text="-"
              android:textColor="@android:color/black"
              android:textSize="18sp"
              app:setFontRobotoLight="@{true}"/>
          </RelativeLayout>
        </LinearLayout>
      </android.support.v7.widget.CardView>


    </LinearLayout>
  </ScrollView>
  </RelativeLayout>
</layout>
