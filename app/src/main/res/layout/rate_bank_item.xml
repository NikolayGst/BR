<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
      android:id="@+id/card"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/medium_margin"
      android:layout_marginBottom="@dimen/medium_margin"
      android:layout_marginLeft="@dimen/small_margin"
      android:layout_marginRight="@dimen/small_margin">

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
          android:id="@+id/lrItem"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="8dp"
          android:background="?attr/selectableItemBackground"
          android:clickable="true"
          android:gravity="center_vertical">

          <ImageView
            android:id="@+id/flag"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="4dp"
            android:src="@drawable/usa"/>

          <TextView
            android:id="@+id/txtCurrency"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"
            android:text="USA"
            android:textColor="@android:color/black"
            android:textSize="18sp"/>

          <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginBottom="6dp"
              android:layout_marginLeft="16dp"
              android:text="Купівля"
              android:textSize="18sp"
              />

            <TextView
              android:id="@+id/txtBuy"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="16dp"
              android:text="26.15"
              android:textColor="@android:color/black"
              android:textSize="18sp"
              />

            <TextView
              android:id="@+id/txtBuyDelta"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="16dp"
              android:text="00.00"
              android:textColor="@android:color/black"
              android:textSize="18sp"/>
          </LinearLayout>

          <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:orientation="vertical">

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginBottom="6dp"
              android:layout_marginLeft="16dp"
              android:text="Продаж"
              android:textSize="18sp"/>

            <TextView
              android:id="@+id/txtSale"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="16dp"
              android:text="26.15"
              android:textColor="@android:color/black"
              android:textSize="18sp"/>

            <TextView
              android:id="@+id/txtSaleDelta"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="16dp"
              android:text="00.00"
              android:textColor="@android:color/black"
              android:textSize="18sp"/>
          </LinearLayout>
        </LinearLayout>

        <LinearLayout
          android:id="@+id/btnsRate"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignBottom="@id/lrItem"
          android:layout_alignParentTop="true"
          android:background="@color/bg_btns"
          android:gravity="center"
          android:visibility="gone">
          <ImageView
            android:id="@+id/buy"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="16dp"
            android:src="@mipmap/ic_buy"
            />
          <ImageView
            android:id="@+id/sale"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/ic_sale"
            />
        </LinearLayout>
      </RelativeLayout>
    </android.support.v7.widget.CardView>

  </LinearLayout>

</layout>
